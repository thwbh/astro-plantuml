{
  "name": "astro-plantuml",
  "version": "0.1.4",
  "description": "Astro integration that automatically converts PlantUML code blocks in markdown to diagrams. Supports sequence, class, activity, state diagrams and more.",
  "type": "module",
  "bin": {
    "astro-plantuml": "./bin/generate.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "preview": "astro dev",
    "astro:preview": "astro preview"
  },
  "keywords": [
    "astro",
    "astro-integration",
    "withastro",
    "plantuml",
    "uml",
    "diagrams",
    "visualization"
  ],
  "author": "Jose Sebastian <josesaby@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/axios": "^0.14.4",
    "axios": "^1.8.4",
    "glob": "^10.3.0",
    "unified": "^11.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@astrojs/starlight": "^0.32.5",
    "@types/node": "^20.11.24",
    "astro": "^5.5.6",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "astro": "^5.5.6"
  }
}
